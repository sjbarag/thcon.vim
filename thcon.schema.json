{
    "title": "thcon.vim payload",
    "description": "Interface for interacting with thcon.vim via thcon-listen",
    "type": "object",
    "properties": {
        "colorscheme": {
            "type": "string",
            "$comment": "Triggers `:colorscheme $value`"
        },
        "let": {
            "type": "object",
            "$comment": "Triggers `let $key=$value`"
        },
        "set": {
            "type": "object",
            "$comment": "Triggers `set $key=$value`, or `set $key`/`set no$key` for boolean values"
        },
        "setglobal": {
            "type": "object",
            "$comment": "Triggers `setglobal $key=$value`, or `setglobal $key`/`set no$key` for boolean values"
        }
    },
    "examples": [
        {},
        { "colorscheme": "blue" },
        {
            "options": {
                "relnum": true
            }
        },
        {
            "colorscheme": "elflord",
            "let": {
                "g:airline_theme": "solarized"
            },
            "set": {
                "background": "dark",
                "number": true
            },
            "setglobal": {
                "verbose": 9
            }
        }
    ]
}
